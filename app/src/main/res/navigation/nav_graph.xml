<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/startFragment">

    <!-- Main Fragment -->
    <fragment
        android:id="@+id/startFragment"
        android:name="com.phoenix.tail.butterfly.eats.concret.upside.vvvvpp.ssstt.StartFragment"
        android:label="Start Fragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.phoenix.tail.butterfly.eats.concret.upside.vvvvpp.hhhee.HomeFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ppFragment"
            app:destination="@id/ppFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.phoenix.tail.butterfly.eats.concret.upside.vvvvpp.sssee.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/ppFragment"
        android:name="com.phoenix.tail.butterfly.eats.concret.upside.vvvvpp.wwwww.PpFragment"
        android:label="PpFragment"
        tools:layout="@layout/fragment_pp" >
        <action
            android:id="@+id/action_ppFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>
